{
  "enabled": true,
  "name": "API Postman Testing",
  "description": "Monitors API source code changes and reminds user to run Postman collection tests manually",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "backend/app/api/*.py",
      "backend/app/services/*.py",
      "backend/app/models/*.py",
      "backend/app/core/*.py",
      "backend/main.py",
      "backend/requirements.txt"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "API source code has been modified. Please remind the user to manually run the Postman collection tests. Provide the collection ID from .postman.json and instructions on how to run the tests locally using the Postman desktop app or Newman CLI."
  }
}
